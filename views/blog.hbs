<!-- Start News Section-->
<section id="news" data-scroll-index="4" class="main-section center-align">

    <div class="container">

      <!--Title-->
        <h4 class="reflection-text p-b-2">Blog</h4>

        <div class="row">

            <div class="col s12">

                <div class="p-t-2 grid center-align row">
{{!--  --}}
                    {{#each dbArticles }}
                    <div class="single-news col s12 m6 l4">

                        <!-- Link to the blog news post -->
                        <a href="single-blog.html">

                            <figure>

                                <!-- Post Image -->
                                <img class="responsive-img" src={{img}} alt="news image">

                                <figcaption>

                                    <span class="overlay gradient-color"></span>

                                    <span class="stats">

                                <span class="search">
                                    <i class="fa fa-search"></i>
                                </span>

                                <span class="icons">
                                    <!--Post Views Count-->
                                    <i class="fa fa-eye" aria-hidden="true"></i>123
                                    <!--Post Comments Count-->
                                    <i class="fa fa-comments" aria-hidden="true"></i>12
                                </span>

                            </span>

                                </figcaption>

                            </figure>

                        </a>


                        <div class="info p-b-1">

                            <p>

                                <!-- Post Writer Name -->
                                <span>
                            <i class="fa fa-user gradient-color" aria-hidden="true"></i>
                            {{author}}
                        </span>

                                <!-- Post Date -->
                                <span>
                            <i class="fa fa-calendar gradient-color" aria-hidden="true"></i>
                            {{serie}}
                        </span>

                            </p>

                            <!-- Post Title -->
                            <a href="#">
                                <h5>{{ title }}</h5>
                            </a>

                            <!-- Post Excerpt -->
                            <p class="p-b-1">{{content}}</p>

                            <!-- Post Link -->
                            <a href="#" class="shadow-button waves-effect waves-light">
                                Read more
                                <i class="fa fa-arrow-right"></i>
                            </a>

                        </div>

                    </div>

                    {{/each}}

{{!--  --}}

                    <ul class="pagination">
                        <li class="disabled"><a href="#!"><i class="fa fa-chevron-left"></i></a></li>
                        <li class="active"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="#!">2</a></li>
                        <li class="waves-effect"><a href="#!">3</a></li>
                        <li class="waves-effect"><a href="#!">4</a></li>
                        <li class="waves-effect"><a href="#!">5</a></li>
                        <li class="waves-effect"><a href="#!"><i class="fa fa-chevron-right"></i></a></li>
                    </ul>

                </div>

            </div>

        </div>

    </div>

</section>
<!-- End News Section-->